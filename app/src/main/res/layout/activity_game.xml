<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board">

    <!-- Tablero de la IA (parte superior) -->
    <TextView
        android:id="@+id/aiScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Mazo de la IA -->
    <ImageView
        android:id="@+id/aiDeckImage"
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/aiScore"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:contentDescription="AI Deck"/>

    <TextView
        android:id="@+id/aiDeckCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/aiDeckImage"
        app:layout_constraintEnd_toEndOf="@id/aiDeckImage"
        app:layout_constraintStart_toStartOf="@id/aiDeckImage"/>

    <!-- Mano de la IA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aiHandRecyclerView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/aiScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/aiDeckImage"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <!-- Filas de combate de la IA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aiMeleeRow"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/aiHandRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aiRangedRow"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/aiMeleeRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aiSiegeRow"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/aiRangedRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <!-- Separador de ronda -->
    <TextView
        android:id="@+id/tvRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ronda 1"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/aiSiegeRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <!-- Filas de combate del jugador -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerSiegeRow"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/tvRound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerRangedRow"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/playerSiegeRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerMeleeRow"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/playerRangedRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <!-- Mazo del jugador -->
    <ImageView
        android:id="@+id/playerDeckImage"
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/playerHandRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:contentDescription="Player Deck"/>

    <TextView
        android:id="@+id/playerDeckCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/playerDeckImage"
        app:layout_constraintEnd_toEndOf="@id/playerDeckImage"
        app:layout_constraintStart_toStartOf="@id/playerDeckImage"/>

    <!-- Mano del jugador -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerHandRecyclerView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@id/btnPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playerDeckImage"
        android:layout_margin="8dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <!-- Controles del jugador -->
    <Button
        android:id="@+id/btnPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/playerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/playerHandRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>